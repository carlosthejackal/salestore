<%= form_for(@item, html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' =>
@s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>   

	<% if @item.errors.any? %>     
	  <div id="error_explanation">       
	    <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
	        <ul>
	        <% @item.errors.full_messages.each do |message| %>
	          <li><%= message %></li>
	        <% end %>
	        </ul>
	      </div>
	<% end %>

	  <div class="field">
	    <%= f.label :name %><br>
	    <%= f.text_field :name %>
	  </div>
	  <div class="field">
	    <%= f.label :description %><br>
	    <%= f.text_field :description %>
	  </div>
	  <div class="field">
	    <%= f.label :original_price %><br>
	    <%= f.text_field :original_price %>
	  </div>
	  <div class="field">
	    <%= f.label :supplier %><br>
	    <%= f.collection_select(:supplier_id, Supplier.all, :id, :name, prompt: true) %>
	  </div>
	  <div class="field">
	    <%= f.label :item_type %><br>
	    <%= f.collection_select(:item_type_id, ItemType.all, :id, :name, prompt: true) %>
	  </div>

<% end %>